<html>
  <head>
    <meta charset="utf-8" />
    <title></title>
    <link href="style.css" rel="stylesheet" />
  </head>
  <body>

    <div class="header">My Messages</div>

    <div id="message-stream">
      <%
        # for each message in @messages
        # render the template below
        # filling the content from
        # the message
      %>
      <% @messages.each do |message| %>
      <div class="message">
        <div class="to">
          To: <%= message.to %>
        </div>
        <div class="from">
          From: <%= message.from %>
        </div>
        <div class="content">
          <%= message.content %>
        </div>
        <div class="time">
          <%= message.created_at %>
        </div>
      </div>
      <% end %>

    </div>
  </body>
</html>
